---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import ArrowRight from "../../assets/icons/ArrowRight.astro";

interface Props {
    imageSrc: ImageMetadata;
    title: string;
    description: string;
    link: string;
    reverse?: boolean;
    isLast?: boolean; // Optional prop to remove the bottom border
}

const { imageSrc, title, description, link, reverse = false, isLast = false } = Astro.props;
---

<div
    class:list={[
        "project-item flex flex-col md:flex-row",
        { "border-b border-accent": !isLast },
        { "md:flex-row-reverse": reverse },
        "items-stretch",
    ]}
>
    <div
        class:list={[
            "w-full md:w-1/2 min-h-[250px]",
            { "md:border-l border-accent": reverse },
            { "md:border-r border-accent": !reverse },
        ]}
    >
        <Image
            src={imageSrc}
            alt={title}
            class="w-full h-[400px] object-cover"
            width={1000}
            height={1000}
            loading="lazy"
            decoding="async"
        />
    </div>

    <div class="flex flex-col w-full md:w-1/2">
        <div class="p-8 flex-grow">
            <h3 class="text-xl font-bold mb-6">{title}</h3>
            <p class="leading-loose hyphens-auto">{description}</p>
        </div>
        <div class="h-row mt-auto border-t border-accent">
            <a
                href={link}
                class="flex items-center px-8 py-7.5 text-sm font-semibold uppercase gap-4 text-gray-800 hover:text-gray-600"
            >
                READ MORE <ArrowRight />
            </a>
        </div>
    </div>
</div>
